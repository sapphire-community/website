{
	"name": "@sapphire/website",
	"version": "1.0.0",
	"description": "Website with the Sapphire guide, hosted on https://sapphirejs.com",
	"author": "@sapphire",
	"license": "MIT",
	"private": true,
	"scripts": {
		"dev": "next dev src -p 3000",
		"type-check": "tsc -b src -w",
		"prebuild": "yarn build:sitemap",
		"build": "next build src",
		"start": "next start src",
		"export": "next export src",
		"clean": "rimraf src/.tsbuildinfo src/.next src/out src/public/sw.js src/public/workbox* src/public/sitemap.xml",
		"build:sitemap": "node scripts/sitemapGenerator.mjs",
		"format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,json}",
		"update": "yarn upgrade-interactive --latest",
		"lint": "eslint src --ext js,jsx,ts,tsx --fix",
		"commit": "git-cz",
		"cz": "git-cz",
		"prepare": "husky install .github/husky"
	},
	"dependencies": {
		"@material-ui/core": "^4.11.3",
		"@material-ui/icons": "^4.11.2",
		"@material-ui/lab": "4.0.0-alpha.57",
		"@sapphire/utilities": "^1.4.7",
		"autosuggest-highlight": "^3.1.1",
		"clsx": "^1.1.1",
		"constate": "^3.2.0",
		"encoding": "^0.1.13",
		"mdi-react": "^7.5.0",
		"next": "^10.1.3",
		"next-mdx-remote": "^2.1.4",
		"next-pwa": "^5.2.9",
		"next-seo": "^4.24.0",
		"nextjs-progressbar": "^0.0.8",
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"react-if": "^4.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.1.1",
		"@commitlint/config-conventional": "^12.1.1",
		"@mdx-js/mdx": "^1.6.22",
		"@sapphire/eslint-config": "^3.0.3",
		"@sapphire/prettier-config": "^1.0.9",
		"@sapphire/ts-config": "^2.1.1",
		"@types/autosuggest-highlight": "^3.1.1",
		"@types/node": "^14.14.41",
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.3",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.24.0",
		"eslint-config-prettier": "^8.2.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-react": "^7.23.2",
		"eslint-plugin-react-hooks": "^4.2.0",
		"husky": "^5.2.0",
		"lint-staged": "^10.5.4",
		"nextjs-sitemap-generator": "^1.3.1",
		"prettier": "^2.2.1",
		"pretty-quick": "^3.1.0",
		"rimraf": "^3.0.2",
		"typescript": "^4.2.4",
		"utility-types": "^3.10.0",
		"webpack": "^5.33.2"
	},
	"peerDependencies": {},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphire-community/website.git"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo"
	],
	"keywords": [
		"@sapphire/website",
		"bot",
		"typescript",
		"ts",
		"yarn",
		"discord",
		"sapphire",
		"discordjs"
	],
	"bugs": {
		"url": "https://github.com/sapphire-community/website/issues"
	},
	"homepage": "https://sapphirejs.com",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,jsx,ts,tsx}": "eslint --fix --ext mjs,js,jsx,ts,tsx"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"resolutions": {
		"acorn": "^8.1.0",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"dot-prop": "^6.0.1",
		"lodash": "^4.17.21",
		"object-path": "^0.11.5",
		"webpack": "^5.33.2"
	},
	"prettier": "@sapphire/prettier-config"
}
