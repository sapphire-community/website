{
	"name": "@sapphire/website",
	"version": "1.0.0",
	"description": "Website with the Sapphire guide, hosted on https://sapphireproject.js.org (TBD)",
	"author": "@sapphire",
	"license": "MIT",
	"private": true,
	"scripts": {
		"dev": "next dev src -p 3000",
		"type-check": "tsc -b src -w",
		"prebuild": "yarn build:sitemap",
		"build": "next build src",
		"start": "next start src",
		"export": "next export src",
		"clean": "rimraf src/.tsbuildinfo src/.next src/out src/public/sw.js src/public/workbox* src/public/sitemap.xml",
		"build:sitemap": "node scripts/sitemapGenerator.mjs",
		"format": "prettier --write src/**/*.{js,jsx,ts,tsx}",
		"update": "yarn upgrade-interactive --latest",
		"lint": "eslint src --ext js,jsx,ts,tsx --fix",
		"commit": "git-cz",
		"cz": "git-cz"
	},
	"dependencies": {
		"@material-ui/core": "^4.11.2",
		"@material-ui/icons": "^4.11.2",
		"@material-ui/lab": "4.0.0-alpha.57",
		"@mdx-js/loader": "^1.6.22",
		"@next/mdx": "^10.0.5",
		"@sapphire/utilities": "^1.3.0",
		"autosuggest-highlight": "^3.1.1",
		"clsx": "^1.1.1",
		"constate": "^3.1.0",
		"mdi-react": "^7.4.0",
		"next": "^10.0.5",
		"next-pwa": "^5.0.1",
		"next-seo": "^4.17.0",
		"nextjs-progressbar": "^0.0.7",
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"react-if": "^4.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@sapphire/eslint-config": "^1.1.1",
		"@sapphire/prettier-config": "^1.0.4",
		"@sapphire/ts-config": "^1.1.0",
		"@types/autosuggest-highlight": "^3.1.1",
		"@types/node": "^14.14.20",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@typescript-eslint/eslint-plugin": "^4.12.0",
		"@typescript-eslint/parser": "^4.12.0",
		"cz-conventional-changelog": "^3.3.0",
		"discord.js": "^12.5.1",
		"eslint": "^7.16.0",
		"eslint-config-prettier": "^7.1.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"husky": "^4.3.7",
		"lint-staged": "^10.5.3",
		"nextjs-sitemap-generator": "^1.1.3",
		"prettier": "^2.2.1",
		"pretty-quick": "^3.1.0",
		"rimraf": "3.0.2",
		"standard-version": "^9.0.0",
		"typescript": "4.1.3",
		"utility-types": "^3.10.0"
	},
	"peerDependencies": {},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphire-project/website.git"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo"
	],
	"engines": {
		"node": ">=14",
		"npm": ">=6"
	},
	"keywords": [
		"@sapphire/website",
		"bot",
		"typescript",
		"ts",
		"yarn",
		"discord",
		"sapphire",
		"discordjs"
	],
	"bugs": {
		"url": "https://github.com/sapphire-project/website/issues"
	},
	"homepage": "https://sapphire-project.github.io/website",
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn pretty-quick --staged && yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,jsx,ts,tsx}": "eslint --fix --ext mjs,js,jsx,ts,tsx"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"resolutions": {
		"acorn": "^6.4.2",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"dot-prop": "^6.0.1",
		"lodash": "^4.17.20",
		"object-path": "^0.11.5"
	},
	"prettier": "@sapphire/prettier-config"
}
