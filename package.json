{
	"name": "@sapphire/website",
	"version": "1.0.0",
	"description": "Website with the Sapphire guide, hosted on https://sapphirejs.dev",
	"author": "@sapphire",
	"license": "MIT",
	"private": true,
	"scripts": {
		"dev": "next dev src -p 3000",
		"type-check": "tsc -b src -w",
		"prebuild": "yarn build:sitemap",
		"build": "next build src",
		"start": "next start src",
		"export": "next export src",
		"lint": "next lint -d src --fix",
		"clean": "rimraf src/.tsbuildinfo src/.next src/out src/public/sw.js src/public/workbox* src/public/sitemap.xml",
		"build:sitemap": "node scripts/sitemapGenerator.mjs",
		"format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,json}",
		"update": "yarn upgrade-interactive --latest",
		"prepare": "husky install .github/husky"
	},
	"dependencies": {
		"@material-ui/core": "^4.12.3",
		"@material-ui/icons": "^4.11.2",
		"@material-ui/lab": "4.0.0-alpha.60",
		"@sapphire/utilities": "^2.0.1",
		"autosuggest-highlight": "^3.1.1",
		"clsx": "^1.1.1",
		"constate": "^3.3.0",
		"encoding": "^0.1.13",
		"mdi-react": "^7.5.0",
		"next": "^11.1.2",
		"next-mdx-remote": "^3.0.4",
		"next-pwa": "^5.3.1",
		"next-seo": "^4.28.1",
		"nextjs-progressbar": "^0.0.11",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"react-if": "^4.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.1.0",
		"@commitlint/config-conventional": "^13.1.0",
		"@mdx-js/mdx": "^1.6.22",
		"@sapphire/eslint-config": "^3.2.3",
		"@sapphire/prettier-config": "^1.1.6",
		"@sapphire/ts-config": "^3.0.0",
		"@types/autosuggest-highlight": "^3.1.1",
		"@types/node": "^16.9.1",
		"@types/react": "^17.0.24",
		"@types/react-dom": "^17.0.9",
		"@typescript-eslint/eslint-plugin": "^4.32.0",
		"@typescript-eslint/parser": "^4.32.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.32.0",
		"eslint-config-next": "^11.1.2",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.26.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"husky": "^7.0.2",
		"lint-staged": "^11.1.2",
		"nextjs-sitemap-generator": "^1.3.1",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.1",
		"rimraf": "^3.0.2",
		"typescript": "^4.4.3",
		"utility-types": "^3.10.0",
		"webpack": "^5.54.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphiredev/website.git"
	},
	"homepage": "https://sapphirejs.dev",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,jsx,ts,tsx}": "eslint --fix --ext mjs,js,jsx,ts,tsx"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"dot-prop": "^6.0.1",
		"lodash": "^4.17.21",
		"object-path": "^0.11.8",
		"merge": "^2.1.1",
		"trim": "^1.0.1",
		"trim-newlines": "^3.0.1"
	},
	"prettier": "@sapphire/prettier-config"
}
